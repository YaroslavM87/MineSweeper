<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="view_root" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="setup_fragment_game_options_item_top_row_first" parent="view_root">
        <item name="android:layout_marginStart">@dimen/spacing_game_options_item_margin_outer</item>
        <item name="android:layout_marginBottom">@dimen/spacing_game_options_item_margin_inner</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/grey_80</item>
    </style>

    <style name="setup_fragment_game_options_item_top_row_second" parent="view_root">
        <item name="android:layout_marginStart">@dimen/spacing_game_options_item_margin_following</item>
        <item name="android:layout_marginBottom">@dimen/spacing_game_options_item_margin_inner</item>
    </style>

    <style name="setup_fragment_game_options_item_bottom_row_first" parent="view_root">
        <item name="android:layout_marginTop">@dimen/spacing_game_options_item_margin_inner</item>
        <item name="android:layout_marginStart">@dimen/spacing_game_options_item_margin_outer</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/grey_40</item>
    </style>

    <style name="setup_fragment_game_options_item_bottom_row_second" parent="view_root">
        <item name="android:layout_marginTop">@dimen/spacing_game_options_item_margin_inner</item>
        <item name="android:layout_marginStart">@dimen/spacing_game_options_item_margin_following</item>
    </style>



    <style name="text_view_root" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="setup_fragment_card_view_main_info" parent="text_view_root">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/grey_80</item>
    </style>

    <style name="setup_fragment_card_view_main_info_description" parent="text_view_root">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/grey_40</item>
    </style>

    <style name="setup_fragment_text_view_header" parent="text_view_root">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="setup_fragment_text_view_sub_header" parent="text_view_root">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="setup_fragment_text_view_option" parent="text_view_root">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setup_fragment_text_view_option_field_size_foreground" parent="setup_fragment_text_view_option">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/amber_300</item>
    </style>

    <style name="setup_fragment_text_view_option_field_size_background" parent="setup_fragment_text_view_option">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>



